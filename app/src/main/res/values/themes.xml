<resources>
    <!-- Base application theme. -->
    <style name="Theme.MovieDB" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status attributes. -->
        <item name="android:statusBarColor">?colorPrimaryVariant</item>
        <!-- Color attributes. -->
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/background</item>
        <!-- Type attributes. -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.App.Headline6</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.App.Headline5</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
    </style>


    <style name="Widget.Text.HomeLabel" parent="">
        <item name="android:layout_marginStart">@dimen/keyline_6</item>
        <item name="android:layout_marginTop">@dimen/keyline_8</item>
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Text.SearchResult" parent="">
        <item name="android:layout_marginBottom">@dimen/keyline_5</item>
        <item name="android:layout_marginTop">@dimen/keyline_5</item>
        <item name="android:layout_marginStart">@dimen/keyline_6</item>
        <item name="android:layout_marginEnd">@dimen/keyline_6</item>
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
    </style>

    <style name="Widget.EditText.Search" parent="">
        <item name="android:layout_marginStart">@dimen/keyline_6</item>
        <item name="android:layout_marginEnd">@dimen/keyline_6</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="drawableEndCompat">@drawable/ic_search</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textColor">@color/hint</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="backgroundTint">@color/stroke</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
